[Unit]
Description=Base44 Security Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/home/pi/base44/systemd/base44-security.env
WorkingDirectory=/home/pi/base44
ExecStart=/home/pi/base44/.venv/bin/python -m bots.security_daemon
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
